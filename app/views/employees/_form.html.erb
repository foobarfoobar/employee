<%= form_for(@employee) do |f| %>
<!-- form_for erkennt ob neu oder edit und setzt richtige action -->
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :firstname%><br>
    <%= f.text_field :firstname, disabled: true  %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday, start_year: Time.now.year - 100, end_year: Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment, size: "20x14" %> <!-- 20 Spalten, 14 Zeilen -->
  </div>
  <div class="field">
    <%= f.label :freelancer %><br>
    <%= f.check_box :freelancer %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
